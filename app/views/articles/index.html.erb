<h1>Articles</h1>

<table>
  <thead>
  <tr>Title</tr>
  <tr>Description</tr>
  <tr>Actions</tr>
  </thead>

  <p><%= link_to 'Create', articles_path + '/new' %></p>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', article_path(article) + '/edit' %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
